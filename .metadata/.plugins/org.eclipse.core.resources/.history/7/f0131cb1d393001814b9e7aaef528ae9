package com.runsystem.datnt.database.service;

import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import com.runsystem.datnt.database.mapper.IMapper;
import com.runsystem.datnt.database.mapper.UserMapper;
import com.runsystem.datnt.dto.User;

@Service("userService")
public class UserService implements IUserService {
	
	@Autowired
	UserMapper mapper;

	@Override
	public int insert(User user) {
		return mapper.insert(user);
	}

	@Override
	public int update(User user) {
		return mapper.update(user);
	}

	@Override
	public int delete(User user) {
		return mapper.delete(user);
	}

	@Override
	public List<User> selectAll() {
		return mapper.selectAll(null);
	}

	@Override
	public User selectOne(User user) {
		return mapper.selectOne(user);
	}

}

package com.runsystem.datnt.validation;

import org.springframework.validation.Errors;
import org.springframework.validation.Validator;

import com.runsystem.datnt.dto.Student;

public class StudentValidator implements Validator {

	@Override
	public boolean supports(Class<?> obj) {
		return Student.class.equals(obj);
	}

	@Override
	public void validate(Object target, Errors errors) {
		String codeRegex = "^[a-zA-Z0-9]{1,20}$";
		String nameRegex = "^[a-zA-Z0-9]{1,100}$";
		
		Student student = (Student) target;
		
		if (!student.getStudentName().matches(nameRegex)) {
			errors.rejectValue("", arg1);
		}
		
		
	}

	
}
